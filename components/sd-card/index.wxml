<!--components/sd-card/index.wxml-->
<view class="card-container custom-class" style="margin-bottom: 30rpx;">
  <view class="title">
    <view class="label">
      <van-icon wx:if="{{ icon }}" name="{{icon}}" />
      <slot wx:else name="icon" />
      <text>{{title}}</text>
    </view>
  </view>
  <view class="body">
    <slot name="body"></slot>
  </view>
</view>