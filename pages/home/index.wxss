/* pages/home/index.wxss */
.container {
  padding-top: 20px;
}

.usual-contain {
  display: flex;
  justify-content: space-between;
}

.block-white {
  background-color: white;
}
.flex-col {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
}

/* 模块 */
.block-main {
  padding: 24rpx;
  margin: 12rpx 0;
}
.s-title {
  font-weight: bold;
  margin-bottom: 24rpx;
}
.text-block {
  background-color: rgba(0, 0, 0, 0.1);
  padding: 12rpx 12rpx;
  margin-top: 12rpx;
}
.text-block text {
  line-height: 50rpx;
}
/* 选择 */
.select-btn {
  width: auto;
  height: 50rpx;
  display: flex;
  justify-content: space-around;
  align-content: center;
  border-radius: 10rpx;
  background-color: #fff;
  padding: 4rpx 16rpx;
}
