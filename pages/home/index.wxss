/* pages/home/index.wxss */
.home-container {
  padding-top: 20px;
  padding-bottom: 100rpx;
  
}

.usual-contain {
  display: flex;
  justify-content: space-between;
}

.block-white {
  background-color: white;
}
.flex-col {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
}

/* 模块 */
.block-main {
  padding: 24rpx;
  margin: 12rpx 0;
  border-top: 2rpx solid #0252cc;
}
.s-title {
  font-weight: bold;
  margin-bottom: 24rpx;
  font-size: 28rpx;
}
.text-block {
  background-color: rgba(238, 240, 244, 1);
  padding: 12rpx 24rpx;
  margin-top: 12rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
}
.text-block text {
  line-height: 60rpx;
}
.text-block text:nth-child(1) {
  color: rgb(107, 119, 140);
}
.text-block text:nth-child(2) {
  color: rgb(17, 17, 17);
}
/* 选择 */
.select-btn {
  width: auto;
  height: 50rpx;
  line-height: 50rpx;
  display: flex;
  justify-content: space-around;
  align-content: center;
  border-radius: 10rpx;
  background-color: #fff;
  padding: 4rpx 16rpx;
}
.select-btn text {
  font-size: 24rpx;
  margin: 0 12rpx;
  vertical-align: middle;
}

