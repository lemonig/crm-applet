<view class="filter-wrap" style="height:calc(100vh - {{ navBarHeight }}px  - 100px) ;padding-top: {{ navBarHeight }}px;">
  <view class="s-title">
    关键词
  </view>
  <view class="tag-wrap" style="margin-bottom: 30rpx;">
    <van-row gutter="20">
      <van-col span="24">
        <van-search shape="round" model:value="{{ key }}" bind:change="handleListFilter" bind:search="handleListFilter" placeholder="请输入合同额、合同编号" />
      </van-col>
    </van-row>
  </view>
  <view class="s-title">
    可见范围
  </view>
  <view class="tag-wrap">
    <van-row gutter="20">
      <van-col span="8" wx:for="{{range}}" wx:key="id" data-id="{{item.id}}" bindtap="choseWrap">
        <van-tag  size="large" custom-class="tag-class {{item.id == value ? 'checked' : ''  }}" plain>{{item.label}}</van-tag>
      </van-col>
    </van-row>
  </view>
