  <view class="s-title">
    合同类型：
  </view>
  <view class="tag-wrap">
    <van-row gutter="20">
      <van-col span="12" wx:for="{{types}}" wx:key="id" data-id="{{item.id}}" bindtap="choseWrap2">
        <van-tag  size="large" custom-class="tag-class {{item.id == value2 ? 'checked' : ''  }}" plain>{{item.name}}</van-tag>
      </van-col>
    </van-row>
  </view>
  <view class="s-title">
    其他：
  </view>
  <view class="tag-wrap">
    <van-row gutter="20">
      <van-col span="12" wx:for="{{others}}" wx:key="id" data-id="{{item.id}}" bindtap="choseWrap3">
        <van-tag  size="large" custom-class="tag-class {{item.checked ? 'checked' : ''  }}" plain>{{item.label}}</van-tag>
      </van-col>
    </van-row>
  </view>

  <view class="btn-wrap">
    <van-button type="danger"   custom-style="width: 30%;margin:0 30rpx" bindtap="deleteItem">重置</van-button>
    <van-button type="info"   custom-style="width: 30%;margin:0 30rpx" bindtap="search">确定</van-button>
  </view>

</view>