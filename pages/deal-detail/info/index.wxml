<!--pages/deal-detail/info/index.wxml-->
<view class="info-wrap">
  <sd-card custom-class="card-margin" title="产品" >
    <van-icon   slot="icon" name="edit" bindtap="selectProduct" data-url="pro"></van-icon>
    <view slot="body">
      <sd-list 
        wx:for="{{productList}}" 
        wx:key="id"
        title="{{item.a1}}" 
        value="{{item.a2}}" 
      >
      </sd-list>
    </view>
  </sd-card>

  <sd-card title="竞争对手">
    <van-icon   slot="icon" name="edit" bindtap="selectProduct" data-url="oppo"></van-icon>
    <view slot="body">
      <sd-list 
        wx:for="{{oppoList}}" 
        wx:key="id"
        title="{{item.a1}}" 
        value="{{item.a2}}" 
      >
      </sd-list>
    </view>
  </sd-card>

  <sd-card title="招标代理">
    <van-icon   slot="icon" name="edit" bindtap="selectProduct" data-url="agent"></van-icon>
    <view slot="body">
      <sd-list 
        wx:for="{{agentList}}" 
        wx:key="id"
        title="{{item.a1}}" 
        lab1="{{item.a2}}" 
      >
      </sd-list>
    </view>
  </sd-card>

  <sd-card title="合作伙伴">
    <van-icon   slot="icon" name="edit" bindtap="selectProduct" data-url="cro"></van-icon>
    <view slot="body">
      <sd-list 
        wx:for="{{conList}}" 
        wx:key="id"
        title="{{item.a1}}" 
        lab1="{{item.a2}}" 
      >
      </sd-list>
    </view>
  </sd-card>

  <sd-card title="合同">
    <view slot="body">
      <sd-list 
        wx:for="{{contList}}" 
        wx:key="id"
        title="{{item.name}}" 
        value="负责人： {{item.ownerUserName}}" 
        lab1="合同额：{{  item.value}}"
        desc1="{{ item.signedDate}}"
        lab2="已回款：{{  item.receivedValue}}"
        desc2="待回款：{{ item.unreceivedValue}}"
      >
      </sd-list>
    </view>
  </sd-card>
</view>